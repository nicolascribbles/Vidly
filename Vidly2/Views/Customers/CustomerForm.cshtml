@model Vidly2.ViewModels.CustomerFormViewModel
@{ 
    ViewBag.Title = "Customers";
}

    <div class="container pt-5">
        @if (Model.Customer.Id == 0)
        {

            <h2>New Customer</h2>
        } else
        {
            <h2>Edit Customer </h2>
        }

        @using (@Html.BeginForm("Save", "Customers"))
        {
            @Html.HiddenFor(m => m.Customer.Id)

            <div class="form-group">
                @Html.LabelFor(m => m.Customer.Name)
                @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Customer.Birthdate)
                @Html.TextBoxFor(m => m.Customer.Birthdate, "{0:d MMM yyyy}", new { @class = "form-control" })
            </div>
            <div class="form-group">

                @Html.LabelFor(m => m.Customer.MembershipTypeId)
                @Html.DropDownListFor(m => m.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), "Select membership type", new { @class = "form-control" })
            </div>

            <div class="form-group">
                <div class="custom-control custom-checkbox">
                    @Html.CheckBoxFor(m => m.Customer.IsSubscribedToNewsletter, new { @class = "custom-control-input" })
                    <label for="Customer_IsSubscribedToNewsletter" class="custom-control-label">Subscribe to newsletter?</label>
                </div>
            </div>

            <button type="submit" class="btn btn-primary mt-5">Submit</button>
        }
