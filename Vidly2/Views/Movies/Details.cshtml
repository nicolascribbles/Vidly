@model Vidly2.Models.Movie
@{
    ViewBag.Title = "Movie Details";
}

<div class="container pt-5">
    <h2>@Model.Name</h2>
    <ul>
        <li>
            Genre: @Model.Genre.Name
        </li>
        @if (Model.ReleaseDate != null)
        {

            <li>
                Release Date: @Model.ReleaseDate
            </li>
        }
        @if (Model.DateAdded != null)
        {

            <li>
                Date Added: @Model.DateAdded
            </li>
        }
        <li>
            Number In Stock: @Model.NumberAvailable
        </li>
    </ul>
</div>