@model IEnumerable<Vidly2.Models.Movie>
@{
    ViewBag.Title = "Movies";
}


<div class="container pt-5">
    <div class="row">
        <div class="col">
            <h2 class="mb-5">Movies</h2>
        </div>
        <div class="col">
            @Html.ActionLink("New Movie", "New", "Movies", null, new { @class = "btn btn-primary float-right"})
        </div>
    </div>
    <table class="table table-bordered table-hover">
        <thead class="">
            <tr>
                <th>Movie</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(@movie.Name, "Edit", "Movies", new { id = @movie.Id }, null)
                    </td>
                    <td>
                        @movie.Genre.Name
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
