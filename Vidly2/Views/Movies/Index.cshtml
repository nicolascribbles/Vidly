@model Vidly2.ViewModels.RandomMovieViewModel

    <div class="container pt-5">
        @if (Model.Movies.Count == 0)
        {
            <text>
                You don't have any customers!
            </text>
        }
        else
        {
            <table class="table table-bordered table-hover">
                <thead class="">
                    <tr>
                        <th>Movies</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var movie in Model.Movies)
                    {
                        <tr>
                            <td>
                                @movie.Name
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }

    </div>
