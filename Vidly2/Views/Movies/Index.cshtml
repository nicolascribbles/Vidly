@model IEnumerable<Vidly2.Models.Movie>

<div class="container pt-5">
    <h2 class="mb-5">Movies</h2>
        <table class="table table-bordered table-hover">
            <thead class="">
                <tr>
                    <th>Movies</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model)
                {
                    <tr>
                        <td>
                            @movie.Name
                        </td>
                    </tr>
                }
            </tbody>
        </table>
</div>
